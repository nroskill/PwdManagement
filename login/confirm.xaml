<Window x:Class="PwdManagement.login.confirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="确认"
        Height="200" Width="400"
        WindowStyle="None"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="120" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Background="#5CD564" Foreground="White" Content="您确定要把此项删除吗" FontFamily="CloudMeiHeiGBK" Name="lb" FontSize="24"/>
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="35" Width="120" Content="是" FontSize="15" FontFamily="黑体" Foreground="White" Background="#5CD564" Margin="50,0,0,20" Name="btn1" Click="btn1_Click" BorderBrush="Transparent"/>
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="35" Width="120" Content="否" FontSize="15" FontFamily="黑体" Foreground="White" Background="#F14B31" Margin="0,0,50,20" Name="btn2" Click="btn2_Click" BorderBrush="Transparent"/>
    </Grid>
</Window>
